
@{
    ViewBag.Title = "StudentCourseDisplay";
}

<h2>Student Course Display</h2>

<br /><br />
<a href="/Home/Index" style="text-align:right">Menu</a> |
@Html.ActionLink("Add New","StudentCourseInsert", "StudentDetails")


<div class="table-responsive">
    <table id="dt1" class="table table-striped table-bordered table-hover table-condensed">
        <thead>
            <tr>
                <td>Student Course ID</td>
                <td>Student Name</td>
                <td>Course Name</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            @foreach (System.Data.DataRow dr in ViewBag.stucors.Rows)
            {
                    <tr>
                        <td>@dr["StudentCourseId"]</td>
                        <td>@dr["Name"]</td>
                        <td>@dr["Course"]</td>                
                        <td>
                            <a href="/StudentDetails/StudentCourseUpdate?id=@dr["StudentCourseId"]">Edit</a>
                            <a href="/StudentDetails/StudentCourseDelete?id=@dr["StudentCourseId"]">Delete</a>
                    </tr>
              }
        </tbody>
    </table>
</div>

